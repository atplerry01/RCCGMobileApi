{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": [
         "node"
       ]
   },
   "include": [
      "src",
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules" /* exclude everything in  node_modules */
    ]
}